<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    


    <div class="header">
       <div class="header_content">
           <div class="login">
               @Html.Partial("_LoginPartial")
           </div>
           <div class="logotip"></div>
          
        </div>
        <div class="header_bottom">
            <div class="header_bottom_content"></div>
        </div>
       <div class="header_bottom_down">
           <div class="header_bottom_down_content"></div>
       </div>
    </div><!--end .header-->
     


    <div class="container">

        <div class="sidebar1">
               
           <div class="sidebar1_content">
              <!--Представление которое выводит рубрики  и категориии в левый сайтбар-->
               @Html.Partial("_PartialSidebar")
           </div>
            
        </div><!--end .sidebar1-->

        <div class="content">
           
            @RenderBody()
            <!--end .content-->
        </div>
        
        <div class="sidebar2">

            <div class="sidebar2_content">

            </div>

            </div>

        <!-- end .container -->
    </div>

   

</body>
</html>

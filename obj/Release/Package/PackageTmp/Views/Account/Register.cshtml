@model MyEngine.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutRegisterPage.cshtml";
}

<div class="title_reg"><div class="t"><h4 style="color:#ffffff;">Регистрация</h4></div></div>
<div class="reg_form">
@using (Html.BeginForm())
{



    <div class="editor-field">
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Введите Email" , type="email"})
     </div>
    <div class="editor-field">
        @Html.PasswordFor(m => m.Password, new { placeholder = "Введите пароль" })
    </div>
    <div class="editor-field">
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Подтвердите пароль" })<br />
    </div>

        <input type="submit" value="Зарегестрировать" />
        <div class="reg_error">
            @Html.ValidationSummary(false)
        </div>
        }
    </div>



